extends layout

block content
  .container
    .row
      .col-md-9
        h1 #{title}
      .col-md-3
      
        a(class="btn btn-default create-btn" , href="/manage/categories/add") Ajouter une catégorie 
    table(class='table table-striped')
      tr
        th Liste des catégories de la ville de Coudekerque-Branche
        th
      each category, i in categories
        tr
          td #{category.title}
          td
            a.btn.btn-primary(class="btn btn-tiny btn-default" href='/manage/categories/edit/'+category._id) Editer