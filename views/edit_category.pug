extends layout

block content
  .container
    h1 #{title}
      hr
      br
      form(method='post', action='/categories/edit/'+category._id)
        .form-group
          label Titre:
          input.form-control(name='title', type='text' , value=category.title)
        .form-group
          label Description:
          textarea.form-control(name='description') #{category.description}
        input.btn.btn-primary(type='submit' , name='submit', value='Sauvegarder') 
        a.btn.btn-default(href='/manage/categories') Retour 
        a.btn.btn-danger.delete-category.pull-right(href='/manage/categories' , data-cat-id=category._id) Effacer 
